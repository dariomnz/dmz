// CHECK-NOT: {{.*}}
extern fn printf(fmt:*u8, ...) -> i32; fn println(n:i32) -> void {printf(&"%d\n", n);}

struct Color {
    r: i32,
    g: i32,
    b: i32,
}

fn print_color(n: Color) -> void {
    println(n.r);
    println(n.g);
    println(n.b);
}

fn add_color(n:Color, add:i32) -> Color {
    let aux = n;
    aux.r = n.r + add;
    aux.g = n.g + add;
    aux.b = n.b + add;
    return aux;
}

fn main() -> void {
    let c = Color{r:1,g:2,b:3};
    print_color(c);
    let c2 = add_color(c, 40);
    print_color(c2);
}
