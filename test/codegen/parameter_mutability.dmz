// RUN: dmz %s -llvm-dump 2>&1 | filecheck %s
// RUN: diff <(dmz %s -run 2>&1) <(echo -n -e '3\n2\n1\n1\n')

extern fn printf(fmt:*u8, ...) -> i32; fn println(n:i32) -> void {printf("%d\n", n);}
fn mutableParam(n: i32) -> void {
  let y = n;
  y = 3;
  println(y);
}
// CHECK: define void @parameter_mutability.mutableParam(i32 %n) {
// CHECK-NEXT: entry:
// CHECK-NEXT:   %y = alloca i32, align 4
// CHECK-NEXT:   call void @llvm.memset.inline.p0.i64(ptr align 8 %y, i8 0, i64 4, i1 false)
// CHECK-NEXT:   store i32 %n, ptr %y, align 4
// CHECK-NEXT:   store i32 3, ptr %y, align 4
// CHECK-NEXT:   %0 = load i32, ptr %y, align 4
// CHECK-NEXT:   call void @parameter_mutability.println(i32 %0)
// CHECK-NEXT:   ret void
// CHECK-NEXT: }

fn immutableParam(n: i32) -> void {
  println(n);
}
// CHECK: define void @parameter_mutability.immutableParam(i32 %n) {
// CHECK-NEXT: entry:
// CHECK-NEXT:   call void @parameter_mutability.println(i32 %n)
// CHECK-NEXT:   ret void
// CHECK-NEXT: }

fn main() -> void {
  let n = 2;
  mutableParam(n);

  println(2);

  n = n - 1;
  immutableParam(n);
    
  println(n);
}
// CHECK: define void @__builtin_main() {
// CHECK-NEXT: entry:
// CHECK-NEXT:   %n = alloca i32, align 4
// CHECK-NEXT:   call void @llvm.memset.inline.p0.i64(ptr align 8 %n, i8 0, i64 4, i1 false)
// CHECK-NEXT:   store i32 2, ptr %n, align 4
// CHECK-NEXT:   %0 = load i32, ptr %n, align 4
// CHECK-NEXT:   call void @parameter_mutability.mutableParam(i32 %0)

// CHECK-NEXT:   call void @parameter_mutability.println(i32 2)

// CHECK-NEXT:   %1 = load i32, ptr %n, align 4
// CHECK-NEXT:   %2 = sub i32 %1, 1
// CHECK-NEXT:   store i32 %2, ptr %n, align 4
// CHECK-NEXT:   %3 = load i32, ptr %n, align 4
// CHECK-NEXT:   call void @parameter_mutability.immutableParam(i32 %3)

// CHECK-NEXT:   %4 = load i32, ptr %n, align 4
// CHECK-NEXT:   call void @parameter_mutability.println(i32 %4)
// CHECK-NEXT:   ret void
// CHECK-NEXT: }
