// RUN: dmz %s -llvm-dump 2>&1 | filecheck %s
// RUN: dmz %s -run | grep -Plzxe '-234\n456\n-12\n'
fn negate(x: i32) -> i32 {
    return -x;
    
    // CHECK: %2 = sub i32 0, %1
}

fn negate2(x: i32) -> i32 {
    return - -x;

    // CHECK: %2 = sub i32 0, %1
    // CHECK-NEXT: %3 = sub i32 0, %2
}

fn timesNeg3(x: i32) -> i32 {
    return -(x - -x -(-x));  
    // CHECK: %2 = load i32, ptr %x, align 4
    // CHECK-NEXT: %3 = sub i32 0, %2
    // CHECK-NEXT: %4 = sub i32 %1, %3
    // CHECK-NEXT: %5 = load i32, ptr %x, align 4
    // CHECK-NEXT: %6 = sub i32 0, %5
    // CHECK-NEXT: %7 = sub i32 %4, %6
    // CHECK-NEXT: %8 = sub i32 0, %7
}
extern fn printf(fmt:*u8, ...) -> i32; fn println(n:i32) -> void {printf("%d\n", n);}

fn main() -> void {
    println(negate(234));
    println(negate2(456));
    println(timesNeg3(4));
}
