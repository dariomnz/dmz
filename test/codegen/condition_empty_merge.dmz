// RUN: dmz %s -llvm-dump 2>&1 | filecheck %s
// RUN: dmz %s -run | ( ! grep ^ )
fn foo(x: i32) -> void {
    if (x == 0) {
        return;
    }
}

fn main() -> void {
    foo(2);
}
// CHECK: define void @condition_empty_merge.foo(i32 %x) {
// CHECK-NEXT: entry:
// CHECK-NEXT:   %0 = icmp eq i32 %x, 0
// CHECK-NEXT:   br i1 %0, label %if.true, label %if.exit
// CHECK-NEXT: 
// CHECK-NEXT: if.true:                                          ; preds = %entry
// CHECK-NEXT:   br label %return
// CHECK-NEXT: 
// CHECK-NEXT: if.exit:                                          ; preds = %entry
// CHECK-NEXT:   br label %return
// CHECK-NEXT: 
// CHECK-NEXT: return:                                           ; preds = %if.exit, %if.true
// CHECK-NEXT:   ret void
// CHECK-NEXT: }
