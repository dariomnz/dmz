{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DMZ",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#builtin"
		},
		{
			"include": "#types"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#chars"
		},
		{
			"include": "#members"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.dmz",
					"begin": "//",
					"end": "$"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.dmz",
					"match": "\\b(if|else|switch|case|while|for|return|pub|fn|extern|defer|errdefer|catch|try|orelse|error|module|test|static)\\b"
				},
				{
					"name": "keyword.other.dmz",
					"match": "\\b(const|let|struct|import|packed)\\b"
				}
			]
		},
		"builtin": {
			"patterns": [
				{
					"name": "entity.name.function.dmz",
					"match": "@[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "keyword.other.types.dmz",
					"match": "\\b(void|f16|f32|f64|bool|true|false|null|[iu]\\d+)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.dmz",
					"match": "\\b(\\+|\\-|\\*|/|%)\\b"
				},
				{
					"name": "keyword.operator.comparison.dmz",
					"match": "\\b(==|!=|<|>|<=|>=)\\b"
				},
				{
					"name": "keyword.operator.assignment.dmz",
					"match": "="
				},
				{
					"name": "keyword.operator.fn_type.dmz",
					"match": "->"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.dmz",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dmz",
					"match": "\\\\."
				},
				{
					"name": "constant.other.placeholder.dmz",
					"match": "%[diouxXeEfFgGaAcspn%]"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.dmz",
			"match": "\\b\\d+\\b"
		},
		"chars": {
			"name": "string.quoted.single.dmz",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.dmz",
					"match": "\\\\."
				}
			]
		},
		"members": {
			"patterns": [
				{
					"match": "(?<![a-zA-Z0-9_>])\\.([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "variable.other.member.dmz"
						}
					}
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.control.fn.dmz"
						},
						"2": {
							"name": "entity.name.function.dmz"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.dmz"
}